    <!-- تضمين ملفات Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('bg-new.jpg');
            /* Set the path to your background image */
            background-size: cover;
            /* Scale the image to cover the entire background */
            background-repeat: no-repeat;
            /* Prevent image repetition */
        }

        /* CSS to style the glassmorphism button */
        .custom-button {
            display: inline-block;
            padding: 10px 20px;
            background: linear-gradient(to bottom, #ff6b6b, #ff0000);
            color: #fff;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
        }

        .custom-button:hover {
            background: linear-gradient(to bottom, #ff0000, #ff6b6b);
        }

        /* CSS for common button style */
        .common-button {
            display: inline-block;
            padding: 30px 60px;
            /* Adjust the padding for a larger size */
            background-color: #92c5f5;
            /* Initial background color */
            color: #fff;
            border: none;
            border-radius: 15px;
            /* Increase the border radius for a more rounded look */
            text-align: center;
            text-decoration: none;
            font-size: 28px;
            /* Adjust the font size */
            cursor: pointer;
            margin: 10px;
            /* Adjust the margin to separate buttons */
            transition: background-color 0.3s ease;
        }

        .common-button:hover {
            background-color: #53014f;
            /* Change the background color on hover */
            color: white;
            
        }
    </style>
</head>

